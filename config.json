{
    "sourcemap": true,
    "compress": {
        "html": false,
        "js": true,
        "css": true
    },
    "browsers": [
        "ie >= 10",
        "ie_mob >= 10",
        "ff >= 30",
        "chrome >= 34",
        "safari >= 7",
        "opera >= 23",
        "ios >= 7",
        "android >= 4.4",
        "bb >= 10"
    ],
    "assemble": {
        "data": "src/templates/data/*.{json,yml}",
        "partials": "src/templates/partials/*.hbs",
        "layoutdir": "src/templates/layouts/*.hbs"
    },
    "clean": [".tmp", "dist"],
    "copy": ["src/**",
        "!src/*.html",
        "!src/styles{,/**}",
        "!src/scripts{,/**}",
        "!src/vendors{,/**}",
        "!src/templates{,/**}",
        "!src/content{,/**}"
    ],
    "vendors-active": ["bootstrap", "jquery", "video.js"],
    "sw": "node_modules/sw-toolbox/sw-toolbox.js",
    "tmp": {
        "root": ".tmp",
        "htmls": ".tmp/static/*.html",
        "styles": ".tmp/css",
        "scripts": ".tmp/js",
        "images": ".tmp/images",
        "sw": ".tmp/js/sw",
        "static": ".tmp/static"
    },
    "src": {
        "root": "src",
        "templates": "src/templates/pages/*.hbs",
        "htmls": ["src/**/*.html"],
        "styles": ["src/styles/*.scss", "src/styles/**/*.css"],
        "scripts": ["!src/scripts/sw", "src/scripts/*.js"],
        "fonts": {
            "bootstrap": ["src/vendors/bootstrap/fonts/bootstrap/**"]
        },
        "vendors": {
            "bootstrap": ["src/vendors/bootstrap/**",
                "!src/vendors/bootstrap/fonts{,/**}",
                "!src/vendors/bootstrap/stylesheets{,/**}",
                "!src/vendors/bootstrap/images{,/**}",
                "!src/vendors/bootstrap/javascripts/bootstrap{,/**}"
            ],
            "jquery": ["src/vendors/jquery/**"],
            "mediaelement": ["src/vendors/mediaelement/**"],
            "video.js": ["src/vendors/video.js/*.{css,js,swf}",
                "src/vendors/video.js/font{,/**}",
                "!src/vendors/video.js/examples{,/**}"
            ],
            "videojs-playlist": ["src/vendors/videojs-playlist/**"]
        },
        "images": ["src/images/**/*.{jpeg,jpg,png,gif,svg}"],
        "sw": "src/scripts/sw/runtime-caching.js"
    },
    "dist": {
        "root": "dist",
        "htmls": "",
        "styles": "css",
        "scripts": "js",
        "fonts": "fonts",
        "vendors": "vendors",
        "images": "images",
        "sw": "js/sw"
    }
}